<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.comtip.tip.ctcreate.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

    <EditText
        android:id="@+id/keywordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="@string/hint_edittext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textviewshape"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="@string/save_button_label" />

        <Button
            android:id="@+id/archiveBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textviewshape"
            android:drawableLeft="@android:drawable/ic_input_get"
            android:text="@string/archive_button_label" />

        <Button
            android:id="@+id/createBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textviewshape"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:text="@string/create_button_label" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/critiqueRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
